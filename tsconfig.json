{
  "ts-node": {
    "swc": false
  },
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    "rootDirs": [
      "src",
      "tests"
    ],
    "target": "es2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/tests/*": [
        "./tests/*"
      ]
    },
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "tests",
    "src/main/factories/infra/gateways/.ts",
    "tests/application/controllers/.spec.ts",
    "tests/main/adapters/.spec.ts"
, "tests/application/decorators/controller/validation/.validation.spec.ts", "tests/main/middlewares/.authentication.spec.ts"  ]
}
